{
    //"indent": 4,
    "maxlen": 120,
    "trailing": true,
    "eqeqeq": true,
    "browser": true,

    // console, alert
    "devel": true,

    // A function can only take max 3 arguments
    "maxparams": 4,

    // Strings use single quotes instead of double
    "quotmark": "single",

    // Error on bitwise javascript operations like | & ^
    "bitwise": true,

    // All conditionals and loops require curly brackets
    "curly": true,

    // require correct variable declaration
    "undef": true,
    "unused": true,

    // These variables are predefined
    "predef": ["jwplayer", "module", "_"]
}
